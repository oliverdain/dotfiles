{
   "diagnostic.checkCurrentLine": true,

   // Markdown
   "markdownlint.config": {
      "line-length": {
         "line_length": 120
      }
   },

   // Bash/sh
   "sh.enable": true,

   "languageserver": {
      "pyls": {
         "command": "python",
         "args": [
            "-mpyls",
            "-vv",
            "--log-file",
            "/tmp/pyls.log"
         ],
         "filetypes": ["python"],
         "settings": {
            "pyls": {
               "enable": true,
               "plugins": {
                  "pycodestyle": {
                     "enabled": false
                  },
                  "pyls_mypy": {
                     "enabled": true
                  },
                  "flake8": {
                     "enabled": true
                  }
               }
            }
         }
    }
  }
}
