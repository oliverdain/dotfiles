{
   "diagnostic.checkCurrentLine": true,

   // Markdown
   "markdownlint.config": {
      "line-length": {
         "line_length": 120
      },
      "MD025": false
   },

   // Bash/sh
   "sh.enable": true,

   "python.linting.flake8Enabled": true,
   "python.linting.flake8Args": [
      "--max-line-length=120"
   ],
   "python.linting.enabled": true,
   "python.linting.mypyEnabled": true,
   "python.analysis.stubPath": "typings",
   "pyright.organizeimports.provider": "isort",
   "pyright.enable": true,
   // Don't show variable types in the editor to the right. I found it a little distracting.
   "pyright.inlayHints.variableTypes": false,
   "python.analysis.diagnosticMode": "workspace",
   "inlayHint.enable": false,

   "languageserver": {
		"terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		},
      "kotlin": {
         "command": "~/bin/lsp/kotlin/server/bin/kotlin-language-server",
         "filetypes": ["kotlin"]
      },
      "pyrefly": {
        "command": "pyrefly",
        "args": ["lsp"],
        "filetypes": ["python"],
        "rootPatterns": ["pyrefly.toml", "pants.toml"]
      }
	}
}
